<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="adress_view_form" model="ir.ui.view">
        <field name="name">Adress Form</field>
        <field name="model">delivery.adress</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="delivery_adress"/>
                    <field name="country_id" widget="selection"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="adress_view_tree" model="ir.ui.view">
        <field name="name">Adress List</field>
        <field name="model">delivery.adress</field>
        <field name="arch" type="xml">
            <tree>
                <field name="delivery_adress"/>
                <field name="country_id" widget="selection"/>
            </tree>
        </field>
    </record>

</odoo>